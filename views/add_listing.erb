<!DOCTYPE HTML>
<html>
<head>
  <link href="/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
  <link href="/css/bootstrap-datepicker.standalone.css" rel="stylesheet">
  <script src="/js/bootstrap.min.js"></script>
  <script src="//cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>
  <script src="/js/bootstrap-datepicker.js"></script>
</head>
<body style="padding-top: 60px">
  <h1 style='margin: 0 auto; text-align: center'>
    Create your new listing for Beaches Supreme!
  </h1>
  <form class="" action="/listing/add" method="post">
    <table>
      <tr>
        <td colspan="3">
          <input type="text" name="title" placeholder="Title" maxlength="30">
        </td>
      </tr>
      <tr>
        <td colspan="3">
          <input type="text" name="description" placeholder="Description" maxlength="300">
        </td>
      </tr>
      <tr>
        <td>
          <input type="number" name="price" placeholder="Price" maxlength="5">
        </td>
        <td>
          <div>
            <form style="width: 50%; text-align: center">
              <input class="datepicker" name="start_date" data-date-format="yyyy-mm-dd" data-provide="datepicker">
            </form>
          </div>
        </td>
        <td>
          <div>
            <form style="width: 50%; text-align: center">
              <input class="datepicker" name="end_date" data-date-format="yyyy-mm-dd" data-provide="datepicker">
            </form>
          </div>
        </td>
      </tr>
    </table>
  </form>
</body>
</html>
